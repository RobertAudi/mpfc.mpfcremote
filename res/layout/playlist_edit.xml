<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

<LinearLayout 
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
<Button android:id="@+id/playlist_up" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="Up" />
	
<Button android:id="@+id/playlist_close" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="Close" />
	
<Button android:id="@+id/playlist_add" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="Add selected" />

<Button android:id="@+id/playlist_clear" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="Clear" />
	
</LinearLayout>

<TextView android:id="@+id/playlist_curdir" android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	/>

<ListView android:id="@android:id/list"
	android:layout_width="fill_parent"
	android:layout_height="0dip"
	android:layout_weight="1"
	android:stackFromBottom="true"
	android:fastScrollEnabled="true"
	android:transcriptMode="normal"/>

</LinearLayout>

