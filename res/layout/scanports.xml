<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

<LinearLayout 
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
<TextView
	android:id="@+id/scanports_label1_id"
	android:text="Start port:"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
<EditText
	android:id="@+id/scanports_start" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
	
<TextView
	android:id="@+id/scanports_label2_id"
	android:text="Number:" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
<EditText
	android:id="@+id/scanports_num" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" />
	
<Button android:id="@+id/scanports_launch" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:text="Find" />

</LinearLayout>

<ListView android:id="@android:id/list"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	android:stackFromBottom="true"
	android:fastScrollEnabled="true"
	android:transcriptMode="normal"/>

</LinearLayout>


